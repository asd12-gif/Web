@model lab8.Models.CarModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="bg-red-light d-inline-block rounded-circle p-3">
                            <i class="bi bi-trash3-fill text-danger" style="font-size: 3.5rem;"></i>
                        </div>
                    </div>

                    <h3 class="fw-bold text-dark">Xác nhận xóa?</h3>
                    <p class="text-muted">
                        Dòng xe <strong class="text-purple-dark">@Model.Name</strong> sẽ bị xóa vĩnh viễn khỏi hệ thống.
                    </p>

                    <div class="bg-light p-3 rounded-3 mb-4 text-start border-start border-danger border-4">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted">Mã dòng xe:</span>
                            <span class="fw-bold">#@Model.Id</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Tên dòng xe:</span>
                            <span class="fw-bold text-danger">@Model.Name</span>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger py-2 fw-bold shadow-sm">
                                <i class="bi bi-check-lg me-1"></i> Đồng ý xóa
                            </button>
                            <a asp-action="Index" class="btn btn-light py-2 text-secondary">Hủy bỏ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
