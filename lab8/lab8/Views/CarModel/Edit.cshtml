@model lab8.Models.CarModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-header bg-purple-light border-0 py-3" style="border-radius: 15px 15px 0 0;">
                    <h4 class="text-purple-dark mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa Dòng xe</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold text-muted small">Tên dòng xe</label>
                            <input asp-for="Name" class="form-control border-purple-light" placeholder="Nhập tên dòng xe..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BrandId" class="form-label fw-bold text-muted small">Thuộc hãng xe</label>
                            <select asp-for="BrandId" class="form-select border-purple-light" asp-items="ViewBag.Brands">
                                <option value="">-- Chọn hãng xe --</option>
                            </select>
                            <span asp-validation-for="BrandId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted small">Hình ảnh hiện tại</label>
                            <div class="mb-2">
                                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.png" : Model.ImageUrl)"
                                     class="img-thumbnail" style="height: 100px; object-fit: cover;" id="preview">
                            </div>
                            <label class="form-label fw-bold text-muted small">Thay đổi hình ảnh</label>
                            <input type="file" name="ImageFile" class="form-control border-purple-light" accept="image/*" onchange="previewImage(this)" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-purple-main shadow-sm mb-2">Cập nhật dữ liệu</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm border-0">Hủy bỏ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}