@model IEnumerable<lab8.Models.CarModelVm>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-purple-dark fw-bold">Quản lý Dòng xe</h2>
            <p class="text-muted">Danh sách các mẫu xe hiện có trong hệ thống</p>
        </div>
        <a asp-action="Create" class="btn btn-purple-main shadow-sm">
            <i class="bi bi-plus-lg"></i> Thêm dòng xe mới
        </a>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-purple-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Tên dòng xe</th>
                            <th>Hãng xe</th>
                            <th class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>
                                <td>@item.CarModelName</td>
                                <td>
                                    <span class="badge bg-purple-badge">@item.BrandName</span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Sửa</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Xem</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>