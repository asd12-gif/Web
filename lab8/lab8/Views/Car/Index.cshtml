@model IEnumerable<lab8.Models.Car>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-purple-dark fw-bold">Quản lý Xe</h2>
            <p class="text-muted small">Danh sách chi tiết các xe hiện có trong hệ thống</p>
        </div>
        <a asp-action="Create" class="btn btn-purple-main shadow-sm">
            <i class="bi bi-plus-lg"></i> Thêm xe mới
        </a>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-purple-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Hình ảnh</th>
                            <th>Tên xe</th>
                            <th>Dòng xe</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                                         alt="@item.Name"
                                         class="rounded shadow-sm border"
                                         style="width: 80px; height: 50px; object-fit: cover;"
                                         onerror="this.src='/images/no-image.png'">
                                </td>
                                <td class="fw-bold">@item.Name</td>
                                <td>
                                    @if (item.CarModel != null)
                                    {
                                        <span class="badge bg-purple-badge text-purple-dark px-3 py-2">
                                            @item.CarModel.Name
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted border">N/A</span>
                                    }
                                </td>
                                <td class="text-center pe-4">
                                    @* Nút thao tác rõ ràng như cũ *@
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Sửa</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Xem</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Bạn chắc chắn muốn xóa xe @item.Name?')">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>