@model lab8.Models.Car

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 text-center">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 20px;">
                <div class="mb-3">
                    <img src="@Model.ImageUrl" class="rounded" style="width: 150px; opacity: 0.7;">
                </div>
                <i class="bi bi-trash3-fill text-danger mb-3" style="font-size: 2rem;"></i>
                <h3 class="fw-bold">Xác nhận xóa xe?</h3>
                <p class="text-muted">Bạn có chắc muốn xóa xe <strong>@Model.Name</strong>? Thao tác này không thể hoàn tác.</p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-danger py-2 fw-bold">Xóa vĩnh viễn</button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2 border-0">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>