@model lab8.Models.Car
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow" style="border-radius: 15px;">
                <div class="card-body p-5 text-center">
                    <i class="bi bi-trash3 text-danger mb-3" style="font-size: 3.5rem;"></i>
                    <h4 class="fw-bold">Gỡ bỏ xe khỏi hệ thống</h4>
                    <p class="text-muted small mb-4">Mọi dữ liệu liên quan đến xe <b>@Model.Name</b> sẽ bị xóa sạch.</p>

                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4 shadow-sm mb-2">Đồng ý xóa</button>
                        <br />
                        <a asp-action="Index" class="text-decoration-none text-muted small">Tôi muốn suy nghĩ lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>