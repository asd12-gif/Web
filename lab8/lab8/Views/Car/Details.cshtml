@model lab8.Models.Car

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-header bg-purple-light border-0 py-3" style="border-radius: 15px 15px 0 0;">
                    <h4 class="text-purple-dark mb-0 fw-bold"><i class="bi bi-car-front-fill me-2"></i>Chi tiết Xe</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-5 text-center">
                            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.png" : Model.ImageUrl)"
                                 class="img-fluid rounded shadow" style="max-height: 200px;">
                        </div>
                        <div class="col-md-7">
                            <h3 class="fw-bold text-purple-dark">@Model.Name</h3>
                            <p class="text-muted small">@Model.Description</p>
                        </div>
                    </div>

                    <table class="table table-borderless border-top">
                        <tr>
                            <th class="text-muted small text-uppercase" style="width: 40%">Mã quản lý (ID)</th>
                            <td class="fw-bold text-purple-dark">#@Model.Id</td>
                        </tr>
                        <tr>
                            <th class="text-muted small text-uppercase">Dòng xe (Model)</th>
                            <td>
                                @if (Model.CarModel != null)
                                {
                                    <span class="badge bg-purple-badge">@Model.CarModel.Name</span>
                                }
                            </td>
                        </tr>
                    </table>

                    <div class="mt-4 pt-3 border-top d-flex gap-2 justify-content-center">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-purple-main px-5 shadow-sm">Chỉnh sửa</a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 border-0">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>