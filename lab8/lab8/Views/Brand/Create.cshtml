@model lab8.Models.Brand

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-header bg-purple-light border-0 py-3" style="border-radius: 15px 15px 0 0;">
                    <h4 class="text-purple-dark mb-0 fw-bold"><i class="bi bi-plus-circle-fill me-2"></i>Thêm Hãng Xe Mới</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Id" class="form-label fw-bold text-muted small">Mã định danh (ID)</label>
                            <input asp-for="Id" class="form-control border-purple-light" placeholder="Nhập ID hãng..." />
                            <span asp-validation-for="Id" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold text-muted small">Tên hãng xe</label>
                            <input asp-for="Name" class="form-control border-purple-light" placeholder="Ví dụ: Toyota, BMW..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Country" class="form-label fw-bold text-muted small">Quốc gia</label>
                            <input asp-for="Country" class="form-control border-purple-light" placeholder="Ví dụ: Nhật Bản, Đức..." />
                            <span asp-validation-for="Country" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-purple-main shadow-sm mb-2">Lưu dữ liệu</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm border-0">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}