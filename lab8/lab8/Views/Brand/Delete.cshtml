@model lab8.Models.Brand

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (TempData["DeleteError"] != null)
            {
                <div class="alert alert-danger border-0 shadow-sm mb-4" style="border-radius: 15px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-octagon-fill me-3 fs-4"></i>
                        <div>@TempData["DeleteError"]</div>
                    </div>
                </div>
            }

            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-body p-5 text-center">
                    <img src="@Model.ImageUrl" style="height: 100px; object-fit: contain;" class="mb-4">
                    <h3 class="fw-bold text-dark">Xác nhận xóa?</h3>
                    <p class="text-muted">Xóa hãng xe <strong class="text-purple-dark">@Model.Name</strong>? Hành động này không thể hoàn tác.</p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger shadow-sm py-2 fw-bold">XÓA VĨNH VIỄN</button>
                            <a asp-action="Index" class="btn btn-outline-secondary py-2 border-0">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>