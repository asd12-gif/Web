@model IEnumerable<lab8.Models.Brand>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-purple-dark fw-bold">Quản lý Hãng xe</h2>
            <p class="text-muted">Danh sách các hãng xe trong hệ thống</p>
        </div>
        <a asp-action="Create" class="btn btn-purple-main shadow-sm">
            <i class="bi bi-plus-lg"></i> Thêm hãng xe mới
        </a>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-purple-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Logo</th>
                            <th>Tên hãng</th>
                            <th>Quốc gia</th>
                            <th>Mô tả</th>
                            <th class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name"
                                             style="width: 50px; height: 50px; object-fit: contain; border-radius: 8px;"
                                             onerror="this.src='/images/no-image.png'" />
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center"
                                             style="width: 50px; height: 50px; border-radius: 8px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td class="fw-bold">@item.Name</td>
                                <td>
                                    <span class="badge bg-purple-badge">@item.Country</span>
                                </td>
                                <td class="text-truncate" style="max-width: 200px;">
                                    <small class="text-muted">@item.Description</small>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning mx-1">Sửa</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info mx-1">Xem</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger mx-1"
                                           onclick="return confirm('Bạn chắc chắn muốn xóa hãng xe này?')">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>