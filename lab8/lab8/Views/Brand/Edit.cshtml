@model lab8.Models.Brand

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-header bg-purple-light border-0 py-3" style="border-radius: 15px 15px 0 0;">
                    <h4 class="text-purple-dark mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Cập nhật Hãng Xe</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        @* Giữ lại đường dẫn ảnh cũ *@
                        <input type="hidden" asp-for="ImageUrl" />

                        <div class="text-center mb-4">
                            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.png" : Model.ImageUrl)"
                                 class="img-thumbnail shadow-sm" style="height: 100px; border-radius: 10px;">
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label fw-bold text-muted small">Tên hãng</label>
                                <input asp-for="Name" class="form-control border-purple-light" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label fw-bold text-muted small">Quốc gia</label>
                                <input asp-for="Country" class="form-control border-purple-light" />
                                <span asp-validation-for="Country" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">Thay đổi logo mới (Để trống nếu giữ ảnh cũ)</label>
                            <input type="file" name="ImageFile" class="form-control border-purple-light" accept="image/*" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold text-muted small">Mô tả</label>
                            <textarea asp-for="Description" class="form-control border-purple-light" rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-purple-main shadow-sm">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm border-0">Hủy bỏ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>