@model Lab_7.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="d-flex align-items-center mb-4 text-danger">
    <i class="fas fa-user-times fa-2x me-3"></i>
    <h1 class="m-0 fw-bold">Delete Student</h1>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger rounded-4 shadow-sm border-0 mb-4">
        <i class="fas fa-exclamation-circle me-2"></i> @ViewData["ErrorMessage"]
    </div>
}

<div class="alert alert-warning rounded-4 shadow-sm border-0 mb-4 bg-warning bg-opacity-10 text-dark">
    <h4 class="alert-heading fw-bold"><i class="fas fa-exclamation-triangle me-2 text-warning"></i>Are you sure?</h4>
    <p class="mb-0">This action cannot be undone. All data related to <strong>@Model.LastName @Model.FirstMidName</strong> will be permanently removed.</p>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
    <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
        <h5 class="card-title m-0 text-danger fw-bold">Student Summary</h5>
    </div>
    <div class="card-body p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">Last Name</dt>
            <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.LastName)</dd>

            <dt class="col-sm-3 text-muted">First Name</dt>
            <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.FirstMidName)</dd>

            <dt class="col-sm-3 text-muted">Enrollment Date</dt>
            <dd class="col-sm-9">@Model.EnrollmentDate.ToShortDateString()</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
            <i class="fas fa-trash-alt me-1"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 border-0">
            Cancel
        </a>
    </div>
</form>