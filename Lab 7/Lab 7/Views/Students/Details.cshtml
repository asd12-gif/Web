@model Lab_7.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="d-flex align-items-center mb-4 text-success">
    <i class="fas fa-info-circle fa-2x me-3"></i>
    <h1 class="m-0 h3 fw-bold">Student Information</h1>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
    <div class="card-header bg-success bg-opacity-10 border-0 py-3">
        <h5 class="card-title m-0 text-success-emphasis fw-bold">Personal Profile</h5>
    </div>
    <div class="card-body p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">Full Name</dt>
            <dd class="col-sm-9 fw-bold">@Model.LastName @Model.FirstMidName</dd>

            <dt class="col-sm-3 text-muted">Enrollment Date</dt>
            <dd class="col-sm-9">@Model.EnrollmentDate.ToShortDateString()</dd>
        </dl>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
    <div class="card-header bg-white py-3 border-bottom border-success border-opacity-10">
        <h5 class="m-0 text-success fw-bold"><i class="fas fa-graduation-cap me-2"></i>Enrolled Courses</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            @* Làm rõ tiêu đề bảng bằng màu nền nhẹ và chữ in hoa *@
            <thead class="bg-success bg-opacity-10">
                <tr>
                    <th class="ps-4 py-3 text-success-emphasis" style="width: 70%">COURSE TITLE</th>
                    <th class="py-3 text-success-emphasis">GRADE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td class="ps-4">
                            <span class="fw-bold text-dark">@item.Course.Title</span>
                            <div class="small text-muted">Course ID: @item.CourseID</div>
                        </td>
                        <td>
                            @if (item.Grade == null)
                            {
                                <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary px-3 py-2">
                                    <i class="fas fa-spinner fa-spin me-1"></i> No Grade
                                </span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3 py-2 fw-bold" style="font-size: 0.9rem;">
                                    <i class="fas fa-star me-1"></i> @Html.DisplayFor(modelItem => item.Grade)
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success px-4 rounded-pill shadow-sm">
        <i class="fas fa-edit me-1"></i> Edit Profile
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill border-0">Back to List</a>
</div>