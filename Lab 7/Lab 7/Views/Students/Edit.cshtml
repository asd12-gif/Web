@model Lab_7.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<div class="d-flex align-items-center mb-4">
    <i class="fas fa-user-edit fa-2x text-success me-3"></i>
    <h1 class="text-success m-0">Edit Student</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label fw-bold text-dark"></label>
                <input asp-for="LastName" class="form-control border-success-subtle shadow-sm" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FirstMidName" class="control-label fw-bold text-dark"></label>
                <input asp-for="FirstMidName" class="form-control border-success-subtle shadow-sm" />
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="EnrollmentDate" class="control-label fw-bold text-dark"></label>
                <input asp-for="EnrollmentDate" class="form-control border-success-subtle shadow-sm" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success px-4 py-2 shadow-sm">
                    <i class="fas fa-save me-1"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 ms-2 shadow-sm">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>