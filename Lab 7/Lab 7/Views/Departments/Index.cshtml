@model Lab_7.PaginatedList<Lab_7.Models.Department>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-success fw-bold m-0"><i class="fas fa-university me-2"></i>Departments</h1>
    <a asp-action="Create" class="btn btn-success shadow-sm rounded-pill px-4">New Dept</a>
</div>

<form asp-action="Index" method="get" class="mb-4 p-3 bg-success bg-opacity-10 rounded-4 shadow-sm">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control border-0 shadow-sm rounded-pill px-3" placeholder="Dept Name..." />
        </div>
        <div class="col-auto">
            <select name="sortOrder" class="form-select border-0 shadow-sm rounded-pill px-3">
                <!option value="" @(ViewData["CurrentSort"]?.ToString() == "" ? "selected" : "")>Name (A-Z)</!option>
                <!option value="name_desc" @(ViewData["CurrentSort"]?.ToString() == "name_desc" ? "selected" : "")>Name (Z-A)</!option>
                <!option value="budget_asc" @(ViewData["CurrentSort"]?.ToString() == "budget_asc" ? "selected" : "")>Budget (Min-Max)</!option>
                <!option value="budget_desc" @(ViewData["CurrentSort"]?.ToString() == "budget_desc" ? "selected" : "")>Budget (Max-Min)</!option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-success rounded-pill px-4">Filter</button>
            <a asp-action="Index" class="btn btn-outline-secondary border-0 rounded-pill">Reset</a>
        </div>
    </div>
</form>

<div class="table-responsive shadow-sm rounded-4 bg-white">
    <table class="table table-hover align-middle mb-0">
        <thead class="bg-success bg-opacity-10 text-success text-center">
            <tr>
                <th class="py-3 border-0">Department Name</th>
                <th class="py-3 border-0">Budget</th>
                <th class="py-3 border-0">Administrator</th>
                <th class="py-3 border-0">Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ps-4 text-start fw-bold text-success">@item.Name</td>
                    @* Chỉnh hiển thị Budget tại đây *@
                    <td class="fw-bold text-dark">@string.Format("{0:C0}", item.Budget)</td>
                    <td>@item.Administrator.LastName</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2 px-3">
                            <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-success px-3 rounded-pill">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-info px-3 rounded-pill">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-danger px-3 rounded-pill">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Phân trang *@
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<nav class="mt-4">
    <ul class="pagination justify-content-center gap-2">
        <li class="page-item @prevDisabled">
            <a class="btn btn-outline-success btn-sm rounded-pill px-3 @prevDisabled"
               asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Previous</a>
        </li>
        <li class="page-item active">
            <span class="btn btn-success btn-sm rounded-pill px-3">Page @Model.PageIndex of @Model.TotalPages</span>
        </li>
        <li class="page-item @nextDisabled">
            <a class="btn btn-outline-success btn-sm rounded-pill px-3 @nextDisabled"
               asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Next</a>
        </li>
    </ul>
</nav>