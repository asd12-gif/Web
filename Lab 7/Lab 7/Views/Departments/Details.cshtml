@model Lab_7.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="mb-4">
    <h1 class="text-success fw-bold h3"><i class="fas fa-university me-2"></i>Department: @Model.Name</h1>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card border-0 bg-success bg-opacity-10 rounded-4 text-center p-4">
            <p class="text-muted mb-1">Annual Budget</p>
            <h2 class="text-success fw-bold mb-0">@Html.DisplayFor(m => m.Budget)</h2>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
            <div class="row g-3">
                <div class="col-6">
                    <label class="text-muted small text-uppercase fw-bold">Administrator</label>
                    <p class="fw-bold">@Model.Administrator.FirstMidName @Model.Administrator.LastName</p>
                </div>
                <div class="col-6">
                    <label class="text-muted small text-uppercase fw-bold">Start Date</label>
                    <p class="fw-bold">@Model.StartDate.ToShortDateString()</p>
                </div>
            </div>
            <hr class="border-success border-opacity-10 my-3">
            <div class="mt-auto d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.DepartmentID" class="btn btn-success px-4">Edit Info</a>
                <a asp-action="Index" class="btn btn-outline-success border-0 px-4">Return</a>
            </div>
        </div>
    </div>
</div>