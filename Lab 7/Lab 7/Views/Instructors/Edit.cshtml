@model Lab_7.Models.Instructor

@{
    ViewData["Title"] = "Edit Instructor";
}

<div class="d-flex align-items-center mb-4 text-success border-bottom pb-2 border-success border-opacity-25">
    <i class="fas fa-chalkboard-teacher fa-2x me-3"></i>
    <h1 class="m-0">Edit Instructor</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label fw-bold"></label>
                <input asp-for="LastName" class="form-control border-success-subtle" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FirstMidName" class="control-label fw-bold"></label>
                <input asp-for="FirstMidName" class="form-control border-success-subtle" />
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="HireDate" class="control-label fw-bold"></label>
                <input asp-for="HireDate" class="form-control border-success-subtle" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success px-4 shadow">Update Profile</button>
                <a asp-action="Index" class="btn btn-link text-decoration-none text-success">Back to List</a>
            </div>
        </form>
    </div>
</div>