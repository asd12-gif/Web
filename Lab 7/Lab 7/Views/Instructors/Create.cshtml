@model Lab_7.Models.Instructor

@{
    ViewData["Title"] = "Create Instructor";
}

<div class="mb-4">
    <h1 class="text-success border-bottom border-3 border-success border-opacity-10 d-inline-block pb-2 h3">
        <i class="fas fa-user-tie me-2"></i> New Instructor
    </h1>
</div>

<div class="card border-0 bg-success bg-opacity-10 rounded-4 shadow-sm p-4">
    <form asp-action="Create" class="row g-3">
        <div class="col-md-6">
            <label asp-for="LastName" class="form-label fw-bold"></label>
            <input asp-for="LastName" class="form-control border-white shadow-sm" />
        </div>
        <div class="col-md-6">
            <label asp-for="FirstMidName" class="form-label fw-bold"></label>
            <input asp-for="FirstMidName" class="form-control border-white shadow-sm" />
        </div>
        <div class="col-12">
            <label asp-for="HireDate" class="form-label fw-bold"></label>
            <input asp-for="HireDate" class="form-control border-white shadow-sm" type="date" />
        </div>
        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-success px-5 fw-bold">Create Instructor </button>
            <a asp-action="Index" class="btn btn-outline-success ms-2">Back</a>
        </div>
    </form>
</div>