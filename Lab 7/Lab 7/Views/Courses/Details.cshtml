@model Lab_7.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="bg-success bg-opacity-10 p-4 rounded-4 mb-4 text-center">
    <i class="fas fa-book-open text-success fa-3x mb-2"></i>
    <h1 class="text-success h3 fw-bold">@Model.Title</h1>
    <span class="badge bg-success rounded-pill px-3 py-2">Credits: @Model.Credits</span>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm rounded-4 px-3 py-2">
            <div class="card-body">
                <div class="row mb-3 pb-3 border-bottom">
                    <div class="col-4 text-muted">Course ID</div>
                    <div class="col-8 fw-bold text-success">@Model.CourseID</div>
                </div>
                <div class="row mb-3 pb-3 border-bottom">
                    <div class="col-4 text-muted">Department</div>
                    <div class="col-8 fw-bold">@Model.Department.Name</div>
                </div>
                <div class="row pt-2">
                    <div class="col-12 text-end">
                        <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-success px-4 me-2">Edit</a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>