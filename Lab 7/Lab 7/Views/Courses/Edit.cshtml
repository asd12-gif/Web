@model Lab_7.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<div class="d-flex align-items-center mb-4 text-success">
    <i class="fas fa-book fa-2x me-3"></i>
    <h1 class="m-0">Edit Course</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseID" />

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Course Number</label>
                <div class="form-control bg-light text-muted">@Html.DisplayFor(model => model.CourseID)</div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label fw-bold"></label>
                <input asp-for="Title" class="form-control border-success-subtle shadow-sm" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Credits" class="control-label fw-bold"></label>
                <input asp-for="Credits" class="form-control border-success-subtle shadow-sm" />
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="DepartmentID" class="control-label fw-bold">Department</label>
                <select asp-for="DepartmentID" class="form-select border-success-subtle shadow-sm" asp-items="ViewBag.DepartmentID"></select>
                <span asp-validation-for="DepartmentID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success px-4 py-2">
                    <i class="fas fa-check-circle me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>