@model IEnumerable<Lab2.Models.Ticket>

@{
    ViewData["Title"] = "Ticket";
}

<h1>Tickets</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Tickets" asp-action="Index" method="get">
    <p>
        <select name="ticketStatus"
                asp-items="Html.GetEnumSelectList<Lab2.Models.TicketStatus>()"
                class="form-select d-inline w-auto me-2">
            <option value="">-- All Status --</option>
        </select>

        Title:
        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control d-inline w-auto me-2" />

        <input type="submit" value="Filter / Search" class="btn btn-primary" />

        <a asp-action="Index" class="btn btn-secondary ms-2">Reset Filters</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Movie!.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Customer!.FullName)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>